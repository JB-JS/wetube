extends layouts/main

block content
    .form-container
        p Change Password 
        form(action=`/users${routes.changePassword}`, method="post")
            input(type="password", name="oldPassword", placeholder="Current Password" required)
            input(type="password", name="newPassword", placeholder="New Password" required)
            input(type="password", name="newPassword1", placeholder="Verify New Password" required)
            input(type="submit", value="Change Password" required).main